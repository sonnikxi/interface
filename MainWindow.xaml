<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#dcf1f7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="520"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button x:Name="button1" Content="Контроль"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
            <Button x:Name="button2" Content="Отчеты"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>


        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button x:Name="button3" Content="Заявки"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
            <Button x:Name="button4" Content="Услуги"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="2">
            <Button x:Name="button5" Content="Страны"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13" Click="button5_Click"/>
            <Button x:Name="button6" Content="Роли"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3">
            <Button x:Name="button7" Content="Клиенты"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
            <Button x:Name="button8" Content="Сотрудники"
                    Margin="20,20,20,0" Height="30"
                    Background="White" BorderBrush=
                    "#FF1239A4" Foreground="#FF1239A4"
                    FontSize="13"/>
        </StackPanel>


        <Grid Grid.Column="2"
                    HorizontalAlignment="Center">
            <Label Margin =" 0, 15
                   , 0,0" FontSize="30" FontFamily="Comic Sans MS"
                   Foreground="#FF1239A4">Test App System</Label>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" >
            <CheckBox x:Name="Check1" Content="Администратор" Margin="0,-1,0,1"
                      FontSize="20" Foreground="#FF1239A4"></CheckBox>
            <ComboBox x:Name="CheckCountry" Width="300" Margin="150, 0, 0, 0"
                      >
            </ComboBox>
        </Grid>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <CheckBox x:Name="Check2" Content="Клиент"
                      FontSize="20" Foreground="#FF1239A4"
                      Margin="0, 10,0,10"></CheckBox>

            <CheckBox x:Name="Check3" Content="Менеджер" 
                      FontSize="20" Foreground="#FF1239A4">
            </CheckBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <RadioButton x:Name="MaleRadio" Content="Мужской"
                         FontSize="20" Foreground="#FF1239A4">
            </RadioButton>
            <RadioButton x:Name="FemaleRadio" Content="Женский" 
                         Margin="0,10,0,0"
                         FontSize="20" Foreground="#FF1239A4">
            </RadioButton>
        </StackPanel>
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
            <Image Source="/images/user1.png" Margin="130,55,200,90"/>
            <TextBox x:Name="textbox" Height="145" Width="180" Margin="330,0,10,30"></TextBox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <Button x:Name="countryButton" Width="200" Height="35" Margin="0,35,250,0"
                    Background ="White" Foreground="#FF1239A4" Content="Добавить страну" Click="countryButton_Click"></Button>
            <Button x:Name="YZButton" Width="200" Height="35" Margin="250,35,0,0"
                    Background ="White" Foreground="#FF1239A4" Content="Создать УЗ"></Button>
        </Grid>
    </Grid>
</Window>
