<Window x:Class="Interface.Registr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Registr" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center" Grid.Column="1" 
                    Margin="193.603,22,246,21">
           
            <Label Content="Логин:"></Label>
            <TextBox x:Name="loginText"
                     Width="300" Height="30"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="passText"
                     Width="300" Height="30"></PasswordBox>

            <Label Content="Имя:"></Label>
            <TextBox x:Name="Name"
                     Width="300" Height="30"></TextBox>
            
            <Button x:Name="saveButton"
                    Height="30" Margin="0,10,0,0" 
                    Content="Зарегестрироваться" 
                    Click="saveButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
