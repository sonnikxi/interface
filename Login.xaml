<Window x:Class="Interface.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Label Content="Логин:"></Label>
            <TextBox x:Name="loginText"
                     Width="300" Height="30"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="passText"
                     Width="300" Height="30"></PasswordBox>

            <Button x:Name="saveButton"
            Height="30" Margin="0,10,0,0" Content="Авторизоваться" Click="loginButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
